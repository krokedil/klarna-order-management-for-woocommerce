{
    "require-dev": {
        "wp-coding-standards/wpcs": "^2.3",
        "wpify/scoper": "3.1.3"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "wpify/scoper": true
        }
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilKOMDeps",
            "folder": "dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}